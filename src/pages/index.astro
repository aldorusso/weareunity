	<script>
		// Pricing filters functionality
		document.addEventListener('DOMContentLoaded', function() {
			const currencyBtns = document.querySelectorAll('.currency-btn');
			const periodBtns = document.querySelectorAll('.period-btn');
			const priceAmounts = document.querySelectorAll('.price-amount');
			const priceCurrencies = document.querySelectorAll('.price-currency');
			const pricePeriods = document.querySelectorAll('.price-period');
			const yearlySavings = document.querySelectorAll('.yearly-savings');
			const savingsCurrencies = document.querySelectorAll('.savings-currency');
			const savingsAmounts = document.querySelectorAll('.savings-amount');

			let currentCurrency = 'eur';
			let currentPeriod = 'monthly';

			function updateActiveButton(buttons, activeBtn) {
				buttons.forEach(btn => {
					btn.classList.remove('active', 'bg-white', 'text-primary', 'shadow-sm');
					btn.classList.add('text-gray-600', 'hover:text-gray-800');
				});
				activeBtn.classList.add('active', 'bg-white', 'text-primary', 'shadow-sm');
				activeBtn.classList.remove('text-gray-600', 'hover:text-gray-800');
			}

			function updatePrices() {
				const currencySymbol = currentCurrency === 'eur' ? '€' : '$';
				const periodText = currentPeriod === 'monthly' ? 'month' : 'year';

				// Update currency symbols
				priceCurrencies.forEach(el => el.textContent = currencySymbol);
				savingsCurrencies.forEach(el => el.textContent = currencySymbol);

				// Update period text
				pricePeriods.forEach(el => el.textContent = periodText);

				// Update prices
				priceAmounts.forEach(el => {
					const dataKey = `${currentCurrency}${currentPeriod.charAt(0).toUpperCase() + currentPeriod.slice(1)}`;
					const price = el.dataset[dataKey];
					if (price) {
						el.textContent = price;
					}
				});

				// Update savings amounts
				savingsAmounts.forEach(el => {
					const savings = el.dataset[currentCurrency];
					if (savings) {
						el.textContent = savings;
					}
				});

				// Show/hide yearly savings
				yearlySavings.forEach(el => {
					if (currentPeriod === 'yearly') {
						el.classList.remove('hidden');
					} else {
						el.classList.add('hidden');
					}
				});
			}

			// Currency button handlers
			currencyBtns.forEach(btn => {
				btn.addEventListener('click', function() {
					currentCurrency = this.dataset.currency;
					updateActiveButton(currencyBtns, this);
					updatePrices();
				});
			});

			// Period button handlers
			periodBtns.forEach(btn => {
				btn.addEventListener('click', function() {
					currentPeriod = this.dataset.period;
					updateActiveButton(periodBtns, this);
					updatePrices();
				});
			});

			// Initialize
			updatePrices();
		});
	</script>
