	<script>
		// Pricing toggle functionality
		const monthlyBtn = document.getElementById('monthly-btn');
		const yearlyBtn = document.getElementById('yearly-btn');
		const eurBtn = document.getElementById('eur-btn');
		const usdBtn = document.getElementById('usd-btn');
		const priceAmounts = document.querySelectorAll('.price-amount');
		const pricePeriods = document.querySelectorAll('.price-period');
		const monthlyEquivalents = document.querySelectorAll('.monthly-equivalent');
		const savingsTexts = document.querySelectorAll('.savings-text');

		let currentCurrency = 'eur';
		let currentPeriod = 'yearly';

		function updatePrices() {
			const isMonthly = currentPeriod === 'monthly';
			// Convert to kebab-case data attribute key: monthly-eur, yearly-usd, etc.
			const dataKey = `${currentPeriod}-${currentCurrency}`;

			priceAmounts.forEach(amount => {
				const price = amount.getAttribute(`data-${dataKey}`);
				if (price) {
					amount.textContent = price;
				}
			});

			pricePeriods.forEach(period => {
				period.textContent = isMonthly ? '/month' : '/year';
			});

			// Update monthly equivalents
			monthlyEquivalents.forEach((equiv, index) => {
				if (!isMonthly) {
					const monthlyKey = `monthly-${currentCurrency}`;
					const monthlyPrice = priceAmounts[index].getAttribute(`data-${monthlyKey}`);
					if (monthlyPrice && monthlyPrice !== 'Custom') {
						equiv.innerHTML = monthlyPrice + '/month';
						equiv.style.display = 'block';
					} else {
						equiv.style.display = 'none';
					}
				} else {
					equiv.style.display = 'none';
				}
			});

			// Update savings text
			savingsTexts.forEach((savings, index) => {
				if (!isMonthly) {
					const yearlyKey = `yearly-${currentCurrency}`;
					const monthlyKey = `monthly-${currentCurrency}`;
					
					const yearlyPrice = priceAmounts[index].getAttribute(`data-${yearlyKey}`);
					const monthlyPrice = priceAmounts[index].getAttribute(`data-${monthlyKey}`);
					
					if (yearlyPrice && monthlyPrice && yearlyPrice !== 'Custom' && monthlyPrice !== 'Custom') {
						const yearlyNum = parseInt(yearlyPrice.replace(/[€$]/g, ''));
						const monthlyNum = parseInt(monthlyPrice.replace(/[€$]/g, ''));
						const yearlySavings = (monthlyNum * 12) - yearlyNum;
						const symbol = currentCurrency === 'eur' ? '€' : '$';
						
						if (!isNaN(yearlySavings) && yearlySavings > 0) {
							savings.innerHTML = `Save ${symbol}${yearlySavings}/year`;
							savings.style.display = 'block';
						} else {
							savings.style.display = 'none';
						}
					} else {
						savings.style.display = 'none';
					}
				} else {
					savings.style.display = 'none';
				}
			});
		}

		function switchToMonthly() {
			monthlyBtn.classList.add('bg-primary', 'text-white');
			monthlyBtn.classList.remove('text-gray-600');
			yearlyBtn.classList.add('text-gray-600');
			yearlyBtn.classList.remove('bg-primary', 'text-white');
			
			currentPeriod = 'monthly';
			updatePrices();
		}

